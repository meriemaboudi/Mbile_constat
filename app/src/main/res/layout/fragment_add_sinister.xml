<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pidev.esprit.tn.insurance.AddSinisterFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/openCameraButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="490dp"

                    android:text="Open Camera" />

                <Button
                    android:id="@+id/buttonSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="690dp"

                    android:text="Add Sinister" />

                <TextView
                    android:id="@+id/AccidentStatement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-20dp"
                    android:paddingTop="@dimen/normal_padding"
                    android:text="@string/accident_statement"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/insuredPolicyHolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="-80dp"
                    android:layout_marginTop="30dp"
                    android:paddingTop="@dimen/normal_padding"
                    android:text="@string/insured_policy_holder"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />

                <FrameLayout
                    android:id="@+id/insuredFrameLayout"
                    android:layout_width="368dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/Namefirstname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="80dp"
                            android:layout_weight="0.48"
                            android:text="@string/name_insured_policy_holder"
                            android:textColor="@color/black_color"
                            android:textSize="12sp"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/nameInsuredText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="80dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="textPersonName" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="120dp"
                            android:layout_weight="1.41"
                            android:text="@string/tel_insured_policy_holder"
                            android:textColor="@color/black_color"
                            android:textSize="12sp"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/telText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="120dp"
                            android:layout_weight="0.56"
                            android:ems="10"
                            android:inputType="phone" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.48"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="160dp"
                            android:layout_weight="2.11"
                            android:text="@string/email_insured_policy_holder"
                            android:textColor="@color/black_color"
                            android:textSize="12sp"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/emailText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="160dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="textEmailAddress" />
                    </LinearLayout>

                </FrameLayout>

                <TextView
                    android:id="@+id/insuranceCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="-80dp"
                    android:layout_marginTop="190dp"
                    android:paddingTop="@dimen/normal_padding"
                    android:text="@string/insurance_company"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />

                <FrameLayout
                    android:id="@+id/insuranceCompanyFrameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/numPolicy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/numPolicyLabel"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="280dp"
                            android:layout_weight="1.71"
                            android:text="@string/policy_insurance_company"
                            android:textColor="@color/black_color"
                            android:textSize="12sp"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/numPolicyText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="280dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="textPersonName" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/company"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/nameCompany"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="240dp"
                            android:layout_weight="2.31"
                            android:text="@string/name_insurance_company"
                            android:textColor="@color/black_color"
                            android:textSize="12sp"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/nameCompanyText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="240dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="textEmailAddress" />
                    </LinearLayout>
                </FrameLayout>

                <TextView
                    android:id="@+id/accidentLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="-80dp"
                    android:layout_marginTop="310dp"
                    android:paddingTop="@dimen/normal_padding"
                    android:text="@string/place_accident"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />

                <FrameLayout
                    android:id="@+id/accidentLocationFrameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    </LinearLayout>

                </FrameLayout>

                <TextView
                    android:id="@+id/carAccidentDamage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="-80dp"
                    android:layout_marginTop="410dp"
                    android:paddingTop="@dimen/normal_padding"
                    android:text="@string/car_accident_damage"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />

                <FrameLayout
                    android:id="@+id/carAccidentFrameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/carAccidentlabel"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="460dp"
                        android:layout_weight="1.71"
                        android:text="@string/car_accident_damage_join_photos"
                        android:textColor="@color/black_color"
                        android:textSize="12sp"
                        android:visibility="visible" />


                    <ImageView
                        android:id="@+id/ivPreview"
                        android:layout_width="match_parent"
                        android:layout_height="146dp"
                        android:layout_marginTop="540dp"
                        app:srcCompat="@drawable/common_google_signin_btn_icon_light_normal_background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    </LinearLayout>

                </FrameLayout>

            </FrameLayout>

        </LinearLayout>
    </ScrollView>


</FrameLayout>
